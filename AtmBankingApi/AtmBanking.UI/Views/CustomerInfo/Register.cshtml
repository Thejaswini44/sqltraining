@model AtmBanking.Entity.Models.CustomerInfo


<form method="post" enctype="multipart/form-data">
    <h2>Customer Entry</h2><hr />
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="name" class="form-control" placeholder="Enter name" required />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" asp-for="address" class="form-control" placeholder="Enter address" required />
    </div>
    <div class="form-group">
        <label>City</label>
        <input type="text" asp-for="city" class="form-control" placeholder="Enter city" required />
    </div>
    <div class="form-group">
        <label>Email-Address</label>
        <input type="text" asp-for="email_address" class="form-control" placeholder="Enter emailaddress" required />
    </div>
    <div class="form-group">
        <label>Contact-Info</label>
        <input type="text" asp-for="contact_info" class="form-control" placeholder="Enter contact-info" required />
    </div>
    <div class="form-group">
        <label>Card Number</label>
        <input type="text" asp-for="card_no" class="form-control" placeholder="Enter  card number" required />
    </div>
    <div class="form-group">
        <label>PinNo</label>
        <input type="text" asp-for="pin_no" class="form-control" placeholder="Enter  pin number" required />
    </div>
    <div class="form-group">
        <label>Account Type</label>
        <input type="text" asp-for="account_type" class="form-control" placeholder="Enter  Account Type" required />
    </div>
    <div class="form-group">
        <label>Account Number</label>
        <input type="text" asp-for="account_number" class="form-control" placeholder="Enter  Account number" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" asp-for="Password" class="form-control" placeholder="Enter password" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <a asp-controller="CustomerInfo" asp-action="Login">Login</a>
    <br/>
    <a asp-controller="TransactionDetails" asp-action="TransactionDetailsEntry">TransactionDetailsEntry</a>
</form>