@model AtmBanking.Entity.Models.AccountDetails


<form method="post" enctype="multipart/form-data">
    <h2>Account Details Entry</h2><hr />
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="name" class="form-control" placeholder="Enter name" required />
    </div>
    <div class="form-group">
        <label>Account Type</label>
        <input type="text" asp-for="account_type" class="form-control" placeholder="Enter Account Type" required />
    </div>
    <div class="form-group">
        <label>Account Number</label>
        <input type="text" asp-for="account_number" class="form-control" placeholder="Enter Account number" required />
    </div>
    <div class="form-group">
        <label>Card Number</label>
        <input type="text" asp-for="card_no" class="form-control" placeholder="Enter card number" required />
    </div>
    <div class="form-group">
        <label>Credit Feilds</label>
        <input type="text" asp-for="credit_fields" class="form-control" placeholder="Enter Credit-fields" required />
    </div>
    <div class="form-group">
        <label>Current Balance</label>
        <input type="text" asp-for="current_balance" class="form-control" placeholder="Enter Current Balance" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
<div class="alert alert-success">
    @ViewBag.message
</div> }
            else if (ViewBag.status == "Error")
            {
<div class="alert alert-danger">
    @ViewBag.message
</div>}
</form>